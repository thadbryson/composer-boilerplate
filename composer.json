{
    "name":         "thadbryson/composer-boilerplate",
    "description":  "Boilerplate for creating PHP Composer projects.",
    "keywords":     ["PHP", "Composer", "boilerplate"],
    "license":      "MIT",
    "type":         "library",
    "homepage":     "http://thadbryson.co/projects/composer-boilerplate",
    "authors": [
        {
            "name":     "Thad Bryson",
            "email":    "thadbry@gmail.com",
            "homepage": "http://thadbryson.co",
            "role":     "Author"
        }
    ],

    "minimum-stability": "stable",

    "require": {
        "php":   ">=5.6.0"
    },

    "_require-recommended": {
        "mmeyer2k/dcrypt":          "@stable",
        "doctrine/common":          "@stable",
        "danielstjules/stringy":    "@stable"
    },

    "require-dev": {
        "mockery/mockery":          "@stable",
        "fzaninotto/faker":         "@stable",
        "codeception/codeception":  "@stable"
    },

    "autoload": {
        "psr-4": {
            "TCB\\MyProject\\":     "src/",
            "TCB\\Test\\":          "test/src/"
        }
    }
}
